 <% include ../partials/header %> 
 
 <div class="container" style="margin-top: 25px">
 <div class="tabbable full-width-tabs">
 <ul class="nav nav-tabs">
    <li class="active take-all-space-you-can"><a data-toggle="tab" href="#home">Update Inventory</a></li>
    <li class="take-all-space-you-can"><a data-toggle="tab" href="#menu1" >Add new</a></li>
  </ul>

  <div class="tab-content" >
    <div id="home" class="tab-pane fade in active">

   <form action="/inventory" method="post" > 
    <div class="row" style="margin-top: 25px">
    <table class ="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                </tr>
            </thead>

            <tbody>
                <%var i =0; items.forEach((item)=>{  %>
                
                 <tr>
                    <td> <%= item.name %> </td>
                    <td> <input type="number" class="form-control" min="0" name="qty" value="<%= item.quantity %>"></td>
                    <input type="hidden" class="form-control"  name="id" value="<%= item.id %>">
                 </tr>   
               <% i++;}) %>



            </tbody>

    </table>
    </div>

    <div class="row">
         <div class="col-12 text-center">
  <button type="submit" class="btn btn-primary" class="align-middle">Submit</button></div>
    </div>
      </form>
    </div>
    <div id="menu1" class="tab-pane fade  center-screen" style="margin-top: 25px">
     <form action="/inventory/add" method="post" > 
         <div class="row">
        <div class="col-md-12">
            <div data-role="dynamic-fields">
                <div class="form-inline" >
                    <div class="form-group">
                        <label class="sr-only" for="field-name">Field Name</label>
                        <input type="text" class="form-control" id="field-name" placeholder="Item" name="name">
                    </div>
                    <span>-</span>
                    <div class="form-group">
                        <label class="sr-only" for="field-value">Field Value</label>
                        <input type="number" class="form-control" id="field-value" min="0" placeholder="Quantity" name="qty">
                    </div>
                    <button class="btn btn-danger" data-role="remove">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                    <button class="btn btn-primary" data-role="add">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>  <!-- /div.form-inline -->
            </div>  <!-- /div[data-role="dynamic-fields"] -->
        </div>  <!-- /div.col-md-12 -->
    </div>  <!-- /div.row -->

     <div class="row">
     <div  style="margin-top:30px"> <button type="submit" class="btn btn-primary" class="align-middle">Submit</button></div>
    </div>
</form>
    </div>
   

  </div>
  </div>
</div>

<% include ../partials/footer %> 