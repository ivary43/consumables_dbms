<% include ../partials/header %>
<div class="container" style="margin-top: 25px">

    <div class="row">

        <div class="col-md-12">
            <h1 class="text-center">New Orders</h1>
        </div>

    </div>

    <form action="/order" method="post">
        <% if (user.isAdmin) { %>
        <div class="form-group required">
            <label for="ownerSelect">Faculty:</label>

            <select class="form-control" name="faculty" id="">
                <% faculties.forEach(faculty => { %>
                    <% if (faculty.isAdmin) { %>
                    <% } else { %>
                     
                <option value="<%= faculty._id %>">
                    <%= faculty.name %>
                </option>
                <% } %>
                <% }); %>
            </select>
        </div>
        <% } %>

        <div class="form-group">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                    </tr>
                </thead>

                <tbody>
                    <%var i =0; items.forEach((item)=>{  %>

                    <tr>
                        <td>
                            <%= item.name %>
                        </td>
                        <td> <input type="number" class="form-control" min="0" name="qty" value="0"></td>
                        <input type="hidden" class="form-control" name="id" value="<%= item._id %>">
                        <input type="hidden" class="form-control" name="name" value="<%= item.name %>">
                    </tr>
                    <% i++;}) %>
                </tbody>

            </table>
        </div>


        <div class="form-group">
            <label for="spreq">Special Request</label>
            <textarea class="form-control" name="specialRequest" id="spreq" rows="5" placeholder="Add your special request. {Format as item-quantity} i.e  chalk-2  "></textarea>
        </div>

        <div class="form-group">
            <div class="mx-auto"> <button type="submit" class="btn btn-primary" class="align-middle">Submit</button></div>
        </div>
    </form>
</div>

<% include ../partials/footer %>