<% include ../partials/header %> 
<div style="margin-top: 25px" class="container">
    
    <div class="row">
        
        <div class="col-md-12">
            <h1 class="text-center">Orders Details for <%= order._id %> </h1>
        </div>     
        
    </div>

    <form action="/order/process" method="post">
        <div class="row">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Sr No.</th>
                        <th>Item Name</th>
                        <th>Quantity Requested</th>
                        <% if (user.isAdmin) { %>
                            <th>Inventory</th>
                        <% } %>   
                        <th>Quantity Supplied</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach((item, i) => { %>
                    <tr>
                            <td><%= (i + 1) %> </td>
                            <td><%= item.item.name %></td>
                            <td><%= item.quantity %> </td>
                            <% if (user.isAdmin) { %>
                                <td><%= item.item.quantity %></td>
                                <td><input type="number" class="form-control" name="quantitySupplied" min="0" value="<%= item.quantitySupplied %>" max="<%= Math.min(item.item.quantity, item.quantity) %>" <%= order.status === 'PROCESSED' ? 'disabled' : '' %>></td>
                                <input type="hidden" name="itemId" value="<%= item._id %>">
                                <input type="hidden" name="itemName" value="<%= item.item.name %>">
                            <% } else { %> 
                                <td><%= item.quantitySupplied %></td>
                            <% } %>
                        </tr>
                    <% }) %>            
                </tbody>
            </table>

          <% if (user.isAdmin && order.status !== "PROCESSED") { %>
            <div class="row">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary" class="align-middle">Submit</button>
                </div>    
            </div>   
            <% }  %>   
        </div>
    </form>    
</div>

<% include ../partials/footer %> 
