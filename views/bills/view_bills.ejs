<% include ../partials/header %>

<div class="container">
         <h1 class="text-center">View Bills</h1>

    <div class="row" style="margin-top: 29px">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Sr. no</th>
                    <th>Uploaded At</th>
                    <th>Topic</th>
                    <th>Description</th>
                    <th>File Name</th>
                    <th>View</th>
                </tr>
            </thead>

            <tbody>
                <%var i =0; bills.forEach((bill)=>{  %>

                <tr>
                    <td>
                        <%= i+1 %>
                    </td>
                    <td>
                        <%= bill.uploadedAt.toLocaleString() %>
                    </td>
                    <td>
                        <%= bill.topic %>
                    </td>
                    <td>
                        <%= bill.description %>
                    </td>
                    <td>
                        <%= bill.fileName %>
                    </td>
                    <td>
                        <form action="/bills/download" method="POST">
                            <input type="hidden" class="form-control" name="id" value="<%= bill.id %>">
                            <button type="submit"><i class="fa fa-download"></i></button>
                        </form>
                    </td>

                </tr>
                <% i++;}) %>
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.10.18/js/dataTables.bootstrap.min.js"></script>

<script>
    
    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        $.fn.dataTable.tables({
            visible: true,
            api: true
        }).columns.adjust();
    });

    $('table.table').DataTable({
        "scrollY": "70vh",
        "scrollCollapse": true,
        "searching": false,
        "pageLength": 50
    });

    $('.dataTables_length').addClass('bs-select');
</script>

<% include ../partials/footer %>